<h1><%= @category.name %></h1>

<div class="row">
  <% Item.all.each do |item| %>
    <% if item.category_ids.include?(@category.id) %>
    <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
      <div class="thumbnail">
        <img src="..." alt="...">
        <div class="caption">
          <h3><%= item.name %></h3>
          <p><%= item.description %></p>
          <p><%= link_to 'Читать далее...', item, class: "btn btn-primary", role: "button" %></p>
        </div>
        <% end %>
    </div>
  </div>
  <% end %>
</div>


<p id="notice"><%= notice %></p>

<h1>Items</h1>


<div class="row">
  <% @items.each do |item| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="..." alt="...">
      <div class="caption">
        <h3><%= item.name %></h3>
        <p><%= item.description %></p>
        <p><%= link_to 'Читать далее...', item, class: "btn btn-primary", role: "button" %> <%= link_to 'Изменить', edit_item_path(item),class: "btn btn-default", role: "button" %> <%= link_to 'Удалить', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default", role: "button" %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>

<br>

<%= link_to 'New Item', new_item_path, class: "btn btn-primary", role: "button" %>

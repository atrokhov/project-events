<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :primecategory_id, "Высшая категория" %>
    <%= form.collection_select(:primecategory_id, Primecategory.order(:name), :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :category_id, "Категория" %>
    <%= form.grouped_collection_select :category_id, Primecategory.order(:name), :categories, :name, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :name, "Название" %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :description, "Описание" %>
    <%= form.text_area :description, id: :item_description %>
  </div>

  <div class="field">
    <%= form.label :course, "Курс" %>
    <%= form.text_field :course, id: :item_course %>
  </div>

  <div class="field">
    <%= form.label :price_of_course, "Цена" %>
    <%= form.number_field :price_of_course, id: :item_price_of_course %>
  </div>

  <div class="field">
    <%= form.label :currency, "Валюта" %>
    <%= form.text_field :currency, id: :item_currency %>
  </div>

  <div class="field">
    <%= form.label :date, "Дата начала" %>
    <%= form.date_select :date, id: :item_date %>
  </div>

  <div class="field">
    <%= form.label :time, "Время начала" %>
    <%= form.time_select :time, id: :item_time %>
  </div>

  <div class="field">
    <%= form.label :description_of_course, "Описание курса" %>
    <%= form.text_area :description_of_course, id: :item_description_of_course %>
  </div>

  <div class="field">
    <%= form.label :teachers, "Учителя" %>
    <%= form.text_area :teachers, id: :item_teachers %>
  </div>

  <div class="actions">
    <%= form.submit "Создать" %>
  </div>
<% end %>

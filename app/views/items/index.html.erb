<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Course</th>
      <th>Price of course</th>
      <th>Currency</th>
      <th>Date</th>
      <th>Description of course</th>
      <th>Teachers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.course %></td>
        <td><%= item.price_of_course %></td>
        <td><%= item.currency %></td>
        <td><%= item.date %></td>
        <td><%= item.description_of_course %></td>
        <td><%= item.teachers %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

